 <section class="content">
    <h2 class="text-center">Reportaż weselny</h2>
    <div>
      <form action="/upload" method="post" enctype="multipart/form-data">
        <label for="images">Dodaj zdjęcia</label>
        <input type="file" id="imageInput" name="images" accept="image/jpeg, image/png, image/heic, image/jpg" multiple required>
        <ul>
            <li>Max. 5 zdjęć</li>
            <li>Max. 5MB per zdjęcie</li>
            <li>Dozwolone: jpg, png, heic</li>
        </ul>
        <button type="submit">Wyślij</button>
      </form>
      <hr>
      <% if (typeof error === 'string') { %>
        <p style="color: red;"><%= error %></p>
      <% } %>
        <% if (typeof error === 'object') { %>
        <p style="color: red;">Poniższe pliki nie zostały przesłane:</p>
        <ul>
            <% error.forEach(errorObject => { %>
                <li><%= errorObject.originalName %>: <%= errorObject.message %></li>
            <% }) %>
        </ul>
      <% } %>
    </div>
     <% if (typeof images === 'undefined') { %>
         <buton onclick="window.location.reload();">Odśwież stronę</buton>
    <% } else { %>
         <div id="lightGallery" class="gallery"></div>
         <div id="loader" style="text-align:center; margin:20px;">Ładowanie...</div>
     <% } %>
  </section>
